<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--detail start-->
    <style name="soil_information_full_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#dbe3e5</item>
    </style>

    <style name="soil_information_middle_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ededed</item>
    </style>

    <style name="soil_information_item_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/home_dimen_30</item>
        <item name="android:paddingRight">@dimen/home_dimen_30</item>
    </style>

    <style name="soil_information_item_container_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">@dimen/home_dimen_20</item>
        <item name="android:paddingRight">@dimen/home_dimen_30</item>
        <item name="android:paddingBottom">@dimen/home_dimen_20</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">@dimen/home_text_size_32</item>


    </style>


    <style name="soil_information_item_container_right_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingRight">@dimen/home_dimen_30</item>
        <item name="android:paddingTop">@dimen/home_dimen_20</item>
        <item name="android:paddingBottom">@dimen/home_dimen_20</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/home_text_size_40</item>
        <item name="android:layout_alignParentRight">true</item>


    </style>

    <style name="soil_information_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/home_dimen_10</item>


        <item name="android:paddingBottom">@dimen/home_dimen_10</item>

        <item name="android:paddingLeft">@dimen/home_dimen_30</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/home_text_size_32</item>



    </style>


    <!--detail end-->



    <!--editor start-->
    <style name="soil_editor_item_container_left_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/home_dimen_20</item>
        <item name="android:paddingRight">@dimen/home_dimen_30</item>
        <item name="android:paddingBottom">@dimen/home_dimen_20</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">@dimen/home_text_size_32</item>
        <item name="android:gravity">right</item>

    </style>


    <style name="soil_editor_item_container_drop_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/home_text_size_40</item>
        <item name="android:background">@drawable/common_round_editor_bg</item>
        <item name="android:drawableRight">@drawable/drop_down</item>


    </style>


    <style name="soil_editor_item_container_no_unit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2.8</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/home_text_size_40</item>
        <item name="android:background">@drawable/common_round_editor_bg</item>



    </style>




    <style name="soil_editor_item_container_unit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2.8</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/home_text_size_40</item>
        <item name="android:background">@drawable/common_round_editor_bg</item>



    </style>

    <style name="soil_editor_item_container_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">horizontal</item>



    </style>


    <style name="soil_editor_item_unit_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2.8</item>
        <item name="android:gravity">left|center</item>




    </style>


    <style name="soil_editor_item_unit_txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_marginLeft">@dimen/home_dimen_20</item>
        <item name="android:singleLine">true</item>

    </style>




    <!--editor end -->

</resources>