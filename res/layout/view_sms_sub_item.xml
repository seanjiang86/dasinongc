<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_reset_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:background="@drawable/button_white_bg_selector"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageView 
            android:id="@+id/imageview_delete_image"
            android:layout_width="50dp"
        	android:layout_height="50dp"
        	android:padding="12dp"
            android:layout_centerVertical="true"
        	android:src="@drawable/delete"
        	android:layout_marginRight="10dp"
            />
        
        <TextView
            android:id="@+id/textview_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:layout_toRightOf="@+id/imageview_delete_image"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_more" />
    </RelativeLayout>

     <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DBE3E5" />
    
</LinearLayout>