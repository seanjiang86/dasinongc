<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ededed" />

    <!--type-->
    <LinearLayout
        android:id="@+id/banner_all_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        tool:visibility="visible"
        android:layout_marginRight="15dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:visibility="gone"
		android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/banner_all_container_icon"
            android:src="@drawable/close_eye_smile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/banner_all_container_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="台风红色一个是人"
                android:singleLine="true"
                android:textColor="#B66121"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/home_text_size_32" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="2"
                android:paddingTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:text="一个人的晚餐无聊人"
                android:id="@+id/banner_all_container_content_above"
                android:textColor="#FC7323"
                android:textSize="@dimen/home_text_size_32" />


        </LinearLayout>

    </LinearLayout>
    <!--icon container-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/banner_img_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tool:visibility="visible"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/banner_img_icon"
            android:src="@drawable/close_eye_smile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <!--icon text container-->
    <LinearLayout
        android:id="@+id/banner_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:visibility="gone"
		android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/banner_title_container_icon"
            android:src="@drawable/close_eye_smile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/banner_title_container_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一个人的晚餐无聊，两个风红色一个人台风红色一个是人台风红色一个是人"
                android:textColor="#B66121"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/home_text_size_32" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ededed" />

</LinearLayout>