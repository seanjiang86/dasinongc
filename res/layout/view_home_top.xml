<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_view_home_top_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="@dimen/row_between_row_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/row_between_row_30">

        <TextView
            android:id="@+id/field"
            android:textSize="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天地"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/add_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <!--农村作物的成长情况-->
    <com.dasinong.app.components.CropsGroupUpView
        android:id="@+id/field_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="@dimen/row_between_row_70"
        android:paddingLeft="@dimen/row_between_row_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day"
            android:textColor="@android:color/white"
            android:textSize="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="10" />

        <LinearLayout
            android:layout_marginLeft="@dimen/row_between_row_15"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/week"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周一" />

            <TextView
                android:id="@+id/wealth"
                android:layout_marginTop="@dimen/row_between_row_10"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大学" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_state"
                android:textSize="17dp"
                android:gravity="center"
                android:background="@drawable/view_home_top_white_bg"
                android:textColor="@color/color_view_home_top_bg"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="宜下地" />

            <TextView
                android:id="@+id/right_state"
                android:textSize="17dp"
                android:gravity="center"
                android:background="@drawable/view_home_top_red_bg"
                android:textColor="@android:color/white"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dip"
                android:text="不宜打药" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/row_between_row_30"
        android:background="#159e13"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"/>

    <LinearLayout
        android:id="@+id/campaign"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        </LinearLayout>
</LinearLayout>
