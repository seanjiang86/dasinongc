<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_view_home_top_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="@dimen/home_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/field"
            android:textSize="@dimen/home_text_size_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="暂无田地"
            android:drawablePadding="5dp"
            android:layout_marginTop="15dp"
            android:textColor="@drawable/topbar_text_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:id="@+id/add_field"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="@drawable/field_add_selector"
             />
        </LinearLayout>
    </RelativeLayout>
    <!--农村作物的成长情况-->
    <com.dasinong.app.components.home.view.CropsGroupUpView
        android:id="@+id/field_state"
        android:layout_marginTop="@dimen/home_dimen_25"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:layout_marginTop="@dimen/home_dimen_30"
        android:layout_marginBottom="@dimen/home_dimen_30"
        android:layout_marginLeft="@dimen/home_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day"
            android:textColor="@android:color/white"
            android:textSize="@dimen/home_text_size_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="10" />

        <LinearLayout
            android:layout_marginLeft="@dimen/home_dimen_15"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/week"
                android:textSize="@dimen/home_text_size_28"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="周一" />

            <TextView
                android:id="@+id/wealth"
                android:layout_marginTop="@dimen/home_dimen_10"
                android:textSize="@dimen/home_text_size_28"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="大雪" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/home_dimen_40"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_state"
                android:textSize="@dimen/home_text_size_30"
                android:gravity="center"
                android:background="@drawable/view_home_top_white_bg"
                android:textColor="@color/color_view_home_top_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="宜下地" />

            <TextView
                android:id="@+id/right_state"
                android:textSize="@dimen/home_text_size_30"
                android:gravity="center"
                android:background="@drawable/view_home_top_red_bg"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"

                android:visibility="gone"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_dimen_20"
                tools:text="不宜打药" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:background="#159e13"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_dimen_line_height_1"/>

    <LinearLayout
        android:id="@+id/campaign"
        android:minHeight="0dp"
        android:layout_marginLeft="@dimen/home_dimen_30"
        android:layout_marginRight="@dimen/home_dimen_30"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>
