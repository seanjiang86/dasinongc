<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dsn="http://schemas.android.com/apk/com.dasinong.app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.dasinong.app.ui.view.TopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.dasinong.app.ui.view.TopbarView>

    <com.dasinong.app.ui.view.AddFieldTabView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        dsn:ivOneColor="@drawable/green_round"
        dsn:ivThreeColor="@drawable/green_round"
        dsn:ivTwoColor="@drawable/green_round"
        dsn:tvDataColor="@color/color_2BAD2A"
        dsn:tvInfoColor="@color/color_2BAD2A"
        dsn:tvLocationColor="@color/color_2BAD2A"
        dsn:tvVarietyColor="@color/color_2BAD2A"
        dsn:viewOneColor="@color/color_2BAD2A"
        dsn:viewThreeColor="@color/color_2BAD2A"
        dsn:viewTwoColor="@color/color_2BAD2A" >
    </com.dasinong.app.ui.view.AddFieldTabView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="95.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginTop="45.0dip" >

        <ImageView
            android:layout_width="95.0dip"
            android:layout_height="95.0dip"
            android:src="@drawable/old_man_head" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25.0dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哪天移植(播种)的?"
                android:textColor="@color/color_333333"
                android:textSize="16.0dip" />
        </LinearLayout>
    </LinearLayout>

    <DatePicker
        android:id="@+id/dp_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:calendarViewShown="false" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="40.0dip" >

        <Button
            android:id="@+id/btn_no_date"
            android:layout_width="145.0dip"
            android:layout_height="45.0dip"
            android:background="@drawable/gray_button_selector"
            android:text="我不确定"
            android:textColor="@color/color_666666"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_sure_date"
            android:layout_width="145.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/green_button_selector"
            android:text="确定"
            android:textColor="@color/color_FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>