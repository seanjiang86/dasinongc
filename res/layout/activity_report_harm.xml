<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical" >

    <com.dasinong.app.ui.view.TopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.dasinong.app.ui.view.TopbarView>

    <ScrollView
        android:id="@+id/sv_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作物名称： "
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水稻"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灾害类型： "
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rg_harm_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rb_disease_harm"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="病害"
                        android:textColor="@color/color_333333" />

                    <RadioButton
                        android:id="@+id/rb_pet_harm"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="4dp"
                        android:text="虫害"
                        android:textColor="@color/color_333333" />

                    <RadioButton
                        android:id="@+id/rb_grass_harm"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="4dp"
                        android:text="草害"
                        android:textColor="@color/color_333333" />

                    <RadioButton
                        android:id="@+id/rb_nosure_harm"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="4dp"
                        android:text="不确定"
                        android:textColor="@color/color_333333" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灾害名称： "
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_harm_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/text_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影响部位： "
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/cb_part_root"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="根"
                        android:textColor="@color/color_333333" />

                    <CheckBox
                        android:id="@+id/cb_part_stems"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="4dp"
                        android:text="茎"
                        android:textColor="@color/color_333333" />

                    <CheckBox
                        android:id="@+id/cb_part_leaves"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="4dp"
                        android:text="叶"
                        android:textColor="@color/color_333333" />

                    <CheckBox
                        android:id="@+id/cb_part_ear"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="4dp"
                        android:text="穗"
                        android:textColor="@color/color_333333" />

                    <CheckBox
                        android:id="@+id/cb_part_grain"
                        style="@style/CustomCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="4dp"
                        android:text="籽粒"
                        android:textColor="@color/color_333333" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爆发时间： "
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rg_happened"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rb_suddenly"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="突然爆发"
                        android:textColor="@color/color_333333" />

                    <RadioButton
                        android:id="@+id/rb_recently"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:paddingLeft="4dp"
                        android:text="近几天逐渐爆发"
                        android:textColor="@color/color_333333" />

                    <RadioButton
                        android:id="@+id/rb_recurrence"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:paddingLeft="4dp"
                        android:text="之前爆发过的，是复发"
                        android:textColor="@color/color_333333" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灾害分布： "
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rg_distribution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rb_uniform"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="整片田均匀受害"
                        android:textColor="@color/color_333333" />

                    <RadioButton
                        android:id="@+id/rb_uneven"
                        style="@style/CustomRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:paddingLeft="4dp"
                        android:text="田里不规则爆发"
                        android:textColor="@color/color_333333" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="田事操作： "
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:gravity="top"
                    android:hint="  近期打药或施肥情况"
                    android:lines="6"
                    android:textColorHint="@color/color_CCCCCC"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加照片："
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

<!--                 <Button
                    android:id="@+id/btn_upload_images"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_green_bg_selector"
                    android:text="上传"
                    android:textColor="@color/color_FFFFFF" /> -->
                
                <ImageButton
                    android:id="@+id/btn_upload_images"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_green_bg_selector"
                    android:src="@drawable/icon_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（支持多图）"
                    android:textColor="@color/color_CCCCCC"
                    android:textSize="13sp" />
            </LinearLayout>

            <GridView
                android:id="@+id/noScrollgridview"
                android:layout_width="290dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="5dp"
                android:visibility="gone" >
            </GridView>

            <Button
                android:id="@+id/btn_submit_harm"
                android:layout_width="match_parent"
                android:layout_height="45.0dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/green_button_selector"
                android:text="提交"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>