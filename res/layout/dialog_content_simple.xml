<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_simple_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_white"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_simple_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:textColor="#333333"
            android:textSize="28sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dialog_divider_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog_simple_cancel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:gravity="center"
                android:text="取消"
                android:textColor="#007aff"
                android:textSize="28sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_divider_v" />

            <Button
                android:id="@+id/btn_dialog_simple_enter"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:gravity="center"
                android:text="确认"
                android:textColor="#007aff"
                android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>