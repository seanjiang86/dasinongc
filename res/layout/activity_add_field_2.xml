<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/add_field_tab" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="95.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginTop="45.0dip" >

        <ImageView
            android:layout_width="95.0dip"
            android:layout_height="95.0dip"
            android:src="@drawable/old_man_head" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25.0dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我猜猜..."
                android:textColor="@color/color_333333"
                android:textSize="16.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的农田是不是在..."
                android:textColor="@color/color_333333"
                android:textSize="16.0dip" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/city_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_privace_city"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:lines="2"
                android:background="@drawable/text_bg"
                android:text="省-市"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_country_district"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:lines="2"
                android:background="@drawable/text_bg"
                android:text="县-镇"
                android:layout_marginLeft="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_village"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:lines="2"
                android:background="@drawable/text_bg"
                android:text="北京-北京"
                android:layout_marginLeft="7dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_sure_location"
            android:layout_width="match_parent"
            android:layout_height="45.0dip"
            android:layout_below="@id/city_container"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/green_button_selector"
            android:text="确定"
            android:textColor="@color/color_FFFFFF"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/fl_select_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/city_container"
            android:visibility="gone"
            android:background="@color/color_harf_transparent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal" >

                <ListView
                    android:id="@+id/lv_big_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white" />

                <ListView
                    android:id="@+id/lv_small_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                     android:background="@android:color/white" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>