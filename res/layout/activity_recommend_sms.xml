<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dasinong.app.ui.view.TopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.dasinong.app.ui.view.TopbarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号1："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone_number1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_bg"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号2："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone_number2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_bg"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号3："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone_number3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_bg"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号4："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone_number4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_bg"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:paddingLeft="5dp"
            android:text="手机号5："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone_number5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_bg"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/green_button_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>