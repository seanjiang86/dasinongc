<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_white_bg_selector"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="泰诺(酚麻美敏混悬液)"
        android:textColor="@color/color_1768BE"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_medicine_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="其组分为每毫升含对乙酰氨基酚32毫克"
        android:textColor="@color/color_999999"
        android:textSize="13sp" />

</LinearLayout>