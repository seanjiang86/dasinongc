<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:background="@drawable/button_white_bg_selector" >

    <ImageView
        android:id="@+id/iv_harm_pic"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/test_pic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_harm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="稻瘟病"
            android:textColor="@color/color_333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_harm_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="你好，你好你好，你好，年号抚摸过宠物要记得及时，，您的退款申请已提交,退步要过分的亲密宠物"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>