<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/button_white_bg_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_dimen_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/disaster_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/disaster_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/home_text_size_26"

                    android:text="病害预警" />

                <TextView
                    android:id="@+id/disaster_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:textColor="#333333"
                    android:textSize="@dimen/home_text_size_36"
                    android:text="稻瘟病" />

            </LinearLayout>

            <ImageView
                android:id="@+id/disaster_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/weed" />
        </LinearLayout>


        <TextView
            android:id="@+id/disaster_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="@dimen/home_dimen_10"
            android:textColor="#333333"
            android:textSize="@dimen/home_text_size_32"
            android:maxLines="2"
            android:ellipsize="end"

        android:text="稻瘟病是水稻重要病害之一 可引起大幅度减产，严重时减产40%～50%，甚至颗粒无收。世界各稻区均匀发生。本病在各地均有发生，其中以叶部、节部发生为多，发生后可造成不同程度减产可造成白穗以致绝产。" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/disaster_prevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1768bc"
                android:textSize="@dimen/home_text_size_32"
                android:text="我要预防"
                tools:text="我要预防"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/disaster_cure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/home_dimen_80"
                android:textColor="#1768bc"
                android:textSize="@dimen/home_text_size_32"
                android:text="我要治疗"
                tools:text="我要治疗" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_dimen_line_height_1"
        android:layout_marginTop="@dimen/home_dimen_30"
        android:background="#dbe3e5" />

</LinearLayout>